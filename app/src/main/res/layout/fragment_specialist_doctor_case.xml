<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CaseDoctor.SpecialistDoctorCaseFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/iv_test"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_7sdp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_10sdp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/poppins_medium"
                android:paddingStart="@dimen/_4sdp"
                android:text="Ebrahem Elzainy"
                android:textColor="#343434"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="@dimen/_5sdp"
                android:text="Specialist-Position"
                android:textColor="#22C7B8"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_100sdp"
            android:src="@drawable/iv_notification"
            android:padding="@dimen/_10sdp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_7sdp"

            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/calls_color"
                app:cardCornerRadius="@dimen/_15sdp"

                android:padding="@dimen/_30sdp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/_45sdp"
                    android:paddingLeft="@dimen/_45sdp"
                    android:paddingTop="@dimen/_50sdp"
                    android:paddingBottom="@dimen/_50sdp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/iv_calls_image"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/calls"
                        android:gravity="center"
                        android:textSize="@dimen/_13sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginTop="@dimen/_10sdp"
                        />



                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="You have new +1 Request"
                    android:gravity="bottom"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/white"
                    />


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/reports_color"
                app:cardCornerRadius="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:padding="@dimen/_30sdp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/_45sdp"
                    android:paddingLeft="@dimen/_45sdp"
                    android:paddingTop="@dimen/_35sdp"
                    android:paddingBottom="@dimen/_35sdp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/iv_reports_images"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/reports"
                        android:gravity="center"
                        android:textSize="@dimen/_13sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginTop="@dimen/_10sdp"
                        />


                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="You have new +3 Reports"
                    android:gravity="bottom"
                    android:layout_marginBottom="@dimen/_13sdp"
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/white"
                    />



            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_20sdp"

            android:layout_marginEnd="@dimen/_10sdp"

            >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/tasks_color"
                app:cardCornerRadius="@dimen/_15sdp"

                android:layout_marginStart="@dimen/_3sdp"
                android:padding="@dimen/_30sdp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/_45sdp"
                    android:paddingLeft="@dimen/_45sdp"
                    android:paddingTop="@dimen/_35sdp"
                    android:paddingBottom="@dimen/_35sdp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/iv__tasks_image"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tasks"
                        android:gravity="center"
                        android:textSize="@dimen/_13sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginTop="@dimen/_10sdp"
                        />


                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="You have new +1 tasks"
                    android:gravity="bottom"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/white"
                    />



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/attendance_color"
                app:cardCornerRadius="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_30sdp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/_45sdp"
                    android:paddingLeft="@dimen/_45sdp"
                    android:paddingTop="@dimen/_50sdp"
                    android:paddingBottom="@dimen/_70sdp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/iv_attendance"
                        android:layout_marginTop="@dimen/_10sdp"

                        />



                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/attendance"
                    android:layout_marginTop="@dimen/_130sdp"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_gravity="start"
                    android:gravity="center"

                    />



            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cases_color"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_13sdp"
        android:padding="@dimen/_30sdp"


        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/_10sdp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/iv_cases"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_180sdp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cases"
                android:layout_marginStart="@dimen/_60sdp"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="@dimen/_25sdp"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>